@model CustomerWebMVC.Models.CustomModel;
    @{
        ViewData["Title"] = "Add Customer Page";
    }


    <div class="text-center">
        <h1 class="display-4">Welcome To Customer Page</h1>
    </div>

    <hr />

    <form method="post" style="margin-left:10px">
        <div>
            <div>
                <h3>Custmor Details</h3>
            </div>
            <br />
            <div>
                <label>Name</label>
                <input type="text" class="form-control" asp-for="CustomerName" style="width:200px" required/>
            </div>
            <div>
                <label>Age</label>
                <input type="number" class="form-control" asp-for="CustomAge" style="width:200px" required/>
            </div>
            <div>
                <label>Address</label>
                <input type="text" class="form-control" asp-for="CustomerAddress" style="width:200px" required/>
            </div>
            <div>
                <label>Phone</label>
                <input type="text" class="form-control" asp-for="CustomerPhone" style="width:200px" required/>
            </div>
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Save</button>

    </form>